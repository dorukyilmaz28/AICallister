# Server Configuration
PORT=3001
NODE_ENV=development

# ⚠️ ÖNEMLİ: Backend .env dosyasında NEXT_PUBLIC_ prefix'li değişken KULLANMAYIN!
# Backend server-side'da çalıştığı için NEXT_PUBLIC_ prefix'ine gerek yok.

# JWT Secret (generate a random string)
JWT_SECRET=your-jwt-secret-key-here-change-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Database URL (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/callisterai"

# NextAuth Migration (if needed)
NEXTAUTH_SECRET="your-nextauth-secret-if-migrating"

# Google Gemini API Configuration
GEMINI_API_KEY="your-gemini-api-key-here"
GEMINI_MODEL="gemini-2.5-flash"

# ChromaDB Cloud Configuration
CHROMA_API_KEY="ck-your-api-key-here"
CHROMA_TENANT="your-tenant-id-here"
CHROMA_DATABASE="Test"

# ChromaDB Local Configuration (Optional)
CHROMA_URL="http://localhost:8000"

# The Blue Alliance API
TBA_API_KEY="your-tba-api-key-here"

# FRC Academy Integration
ACADEMY_API_URL="https://frcacademy.com/api"
ACADEMY_BASE_URL="https://frcacademy.com"

# Email Configuration (if using nodemailer)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
